<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadius="12dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false" >
        <size
            android:height="28dp"
            android:width="38dp" />

        <gradient
            android:centerColor="#FF63C1E2"
            android:centerY="0.5"
            android:endColor="#1B3D49"
            android:startColor="#E9FAFC"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>