<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/_21sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_weight="1"
        android:background="@drawable/background_search_view"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp">

    <TextView
            android:id="@+id/tv_alert_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6sdp"
            android:gravity="center"
            android:minLines="2"
            android:text="USERNAME has rejected your request to join TEAMNAME"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/tv_alert_okay_btn"
            android:layout_width="@dimen/_88sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_below="@+id/tv_alert_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/selector_force_update_dialog_button"
            android:gravity="center"
            android:text="Ok"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_alert_text"/>

</android.support.constraint.ConstraintLayout>

